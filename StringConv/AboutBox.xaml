<Window x:Class="StringConv.AboutBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StringConv"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="About"
        Width="250"
        Height="220"
        Background="#FF2E323A"
        Foreground="LightGray"
        Loaded="Window_Loaded"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        mc:Ignorable="d">
    <StackPanel Margin="20">
        <TextBlock x:Name="TextName" Margin="10" />
        <TextBlock x:Name="TextLicense"
                   Margin="10"
                   Text="MIT License" />
        <TextBlock x:Name="TextCopyright" Margin="10" />
        <TextBlock x:Name="TextLink" Margin="10">
            <Hyperlink Click="Hyperlink_Click" NavigateUri="https://github.com/detached64/StringConv">
                Development Site
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Window>
