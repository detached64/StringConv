<Window x:Class="StringConv.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:StringConv"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="StringConv"
        Width="800"
        Height="500"
        Background="#FF2E323A"
        FontSize="15"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid Margin="20,20,20,20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   Foreground="LightGray"
                   Text="ASCII" />
        <TextBlock Grid.Row="1"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   Foreground="LightGray"
                   Text="Unicode" />
        <ComboBox Name="CombCustomEncoding"
                  Grid.Row="2"
                  Margin="10,10,10,10"
                  HorizontalAlignment="Stretch"
                  DisplayMemberPath="Name"
                  Foreground="#FF313131"
                  SelectedValuePath="CodePage"
                  SelectionChanged="CombCustomEncoding_SelectionChanged" />
        <TextBlock Grid.Row="3"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   Foreground="LightGray"
                   Text="Hex" />
        <TextBlock Grid.Row="4"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   Foreground="LightGray"
                   Text="Copy" />
        <TextBlock Grid.Row="5"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   Foreground="LightGray"
                   Text="String to Copy" />
        <TextBlock Grid.Row="6"
                   Margin="10,10,10,10"
                   HorizontalAlignment="Left"
                   Foreground="LightGray"
                   Text="Byte Count" />
        <TextBox x:Name="TextASCII"
                 Grid.Row="0"
                 Grid.Column="1"
                 Margin="10,10,10,10"
                 HorizontalAlignment="Stretch"
                 Background="#FF313131"
                 Foreground="LightGray"
                 TextChanged="TextChanged" />
        <TextBox x:Name="TextUnicode"
                 Grid.Row="1"
                 Grid.Column="1"
                 Margin="10,10,10,10"
                 HorizontalAlignment="Stretch"
                 Background="#FF313131"
                 Foreground="LightGray"
                 TextChanged="TextChanged" />
        <TextBox x:Name="TextCustomEncoding"
                 Grid.Row="2"
                 Grid.Column="1"
                 Margin="10,10,10,10"
                 HorizontalAlignment="Stretch"
                 Background="#FF313131"
                 Foreground="LightGray"
                 TextChanged="TextChanged" />
        <TextBox x:Name="TextHex"
                 Grid.Row="3"
                 Grid.Column="1"
                 Margin="10,10,10,10"
                 HorizontalAlignment="Stretch"
                 Background="#FF313131"
                 FontFamily="Consolas"
                 Foreground="LightGray"
                 IsReadOnly="True" />
        <StackPanel Grid.Row="4"
                    Grid.Column="1"
                    Margin="0"
                    Orientation="Horizontal">
            <Button Name="BtnCopyASCII"
                    Margin="10,10,5,10"
                    Click="BtnCopyClick"
                    Content="ASCII"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
            <Button Name="BtnCopyUnicode"
                    Margin="5,10,5,10"
                    Click="BtnCopyClick"
                    Content="Unicode"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
            <Button Name="BtnCopyCustomEncoding"
                    Margin="5,10,5,10"
                    Click="BtnCopyClick"
                    Content="Custom Encoding"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
            <Button Name="BtnCopyHex"
                    Margin="5,10,5,10"
                    Click="BtnCopyClick"
                    Content="Hex"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
            <Button Name="BtnCopyHexWithSpace"
                    Margin="5,10,5,10"
                    Click="BtnCopyClick"
                    Content="Hex with Space"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
            <Button Name="BtnCopyHexWithHyphen"
                    Margin="5,10,5,10"
                    Click="BtnCopyClick"
                    Content="Hex with Hyphen"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
            <Button Name="BtnCopyBase64"
                    Margin="5,10,10,10"
                    Click="BtnCopyClick"
                    Content="Base64"
                    MouseEnter="BtnMouseEnter"
                    MouseLeave="BtnMouseLeave" />
        </StackPanel>
        <TextBox Name="TextToCopy"
                 Grid.Row="5"
                 Grid.Column="1"
                 Margin="10,10,10,10"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 Background="#FF313131"
                 Foreground="LightGray"
                 IsReadOnly="True" />
        <Grid Grid.Row="6" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Name="TextByteCount"
                       Margin="10,10,10,10"
                       HorizontalAlignment="Left"
                       Foreground="LightGray" />
            <Button Name="BtnClear"
                    Grid.Column="1"
                    Margin="10,10,10,10"
                    Click="BtnClear_Click"
                    Content="Clear" />
        </Grid>
    </Grid>
</Window>
